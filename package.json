{
    "name": "interbtc-indexer",
    "private": "true",
    "version": "0.4.3",
    "description": "GraphQL server and Substrate indexer for the interBTC parachain",
    "author": "",
    "license": "ISC",
    "scripts": {
        "build": "rm -rf lib && tsc",
        "gen:json": "node indexer/generateTypes.js",
        "gen:explore": "squid-substrate-metadata-explorer --chain ws://localhost:9944 --out indexer/chainVersions.json",
        "gen:types": "squid-substrate-typegen typegen.json",
        "gen:code": "sqd codegen",
        "gen:all": "yarn gen:json && yarn gen:code && yarn gen:types",
        "gen:distributables": "cp indexer/types.json distributable/ && cp schema.graphql distributable/",
        "db:create": "sqd db create",
        "db:drop": "sqd db drop",
        "db:create-migration": "sqd db create-migration",
        "db:migrate": "node db/init.js",
        "db:revert": "sqd db revert",
        "db:reset": "sqd db drop && sqd db create && sqd db migrate",
        "processor:start": "node -r dotenv/config lib/processor.js",
        "query-node:start": "squid-graphql-server"
    },
    "dependencies": {
        "@interlay/interbtc-api": "1.5.20",
        "@interlay/interbtc-types": "1.5.10",
        "@subsquid/graphql-server": "^0.1.5",
        "@subsquid/ss58": "^0.0.4",
        "@subsquid/substrate-processor": "^0.3.0",
        "bitcoinjs-lib": "^5.2.0",
        "debug": "^4.3.3",
        "dotenv": "^10.0.0",
        "pg": "^8.7.1",
        "typeorm": "^0.2.41"
    },
    "devDependencies": {
        "@subsquid/cli": "^0.1.3",
        "@subsquid/substrate-metadata-explorer": "^0.0.7",
        "@subsquid/substrate-typegen": "^0.2.1",
        "@types/debug": "^4.1.7",
        "@types/node": "^16.11.2",
        "prettier": "^2.0.5",
        "typescript": "~4.4.4"
    },
    "prettier": {
        "singleQuote": false,
        "tabWidth": 4
    }
}
